@{
    ViewBag.Title = "Registrar";
}

@using maketeam.Models
@model Usuario

@using (Html.BeginForm("ValidarR", "Home", FormMethod.Post))
{
    @Html.HiddenFor(model => model.IDUsuario)
    <p>Usuario</p>@Html.TextBoxFor(model => model.NombreDeUsuario)@Html.ValidationMessageFor(model => model.NombreDeUsuario) <br />
    <p>Password</p> @Html.PasswordFor(model => model.Contraseña)@Html.ValidationMessageFor(model => model.Contraseña) <br />
    <p>Correo Electronico</p> @Html.PasswordFor(model => model.CorreoElectronico)@Html.ValidationMessageFor(model => model.CorreoElectronico) <br />
    <p>Password</p> @Html.PasswordFor(model => model.Contraseña)@Html.ValidationMessageFor(model => model.Contraseña) <br />
    @Html.DropDownListFor(model => model.Sexo, new SelectList(ViewBag.sex, "Nombre", "Nombre"))
    <p>Password</p> @Html.PasswordFor(model => model.Edad)@Html.ValidationMessageFor(model => model.Edad) <br />
    @Html.DropDownListFor(model => model.Localidad, new SelectList(ViewBag.loc,"Nombre", "Nombre"))


    <input type="submit" value="Registrar">
}